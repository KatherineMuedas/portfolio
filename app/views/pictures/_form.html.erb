<div class="authform">
  <h3>Upload Photo</h3>
  <%= simple_form_for [@project, @picture]  do |f| %>
    <!-- Check if there were any errors saving project task and display them if so -->
    <% if @picture.errors.any? %>
      <div id='error_explanation'>
        <h2><%= pluralize(@picture.errors.count, "error") %> prohibited
            this picture from being saved:</h2>
        <ul>
          <% @picture.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Begin rendering the form -->
    <div class= 'form-group'>
      <%= f.input :title %><br>
    </div>

    <div class= 'form-group'>
      <%= f.input :photo %><br>
    </div>
    <p>
      <%= link_to 'Back', root_path, :class => 'button left' %>
      <%= f.submit 'Submit', :class => 'button right' %> 
    </p>
  <% end %>
</div>
