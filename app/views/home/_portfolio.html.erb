<section id="project">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Portfolio</h2>
        <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <% @projects.each_with_index do |project,index| %>
        <div class="col-sm-4 portfolio-item">
          <a href="#portfolioModal<%= index + 1 %>" class="portfolio-link" data-toggle="modal">
            <div class="caption">
              <div class="caption-content">
                <i class="fa fa-search-plus fa-3x"></i>
              </div>
              <div class="caption-title">
                <h3><%= project.title %></h3>
              </div>
            </div>
            <% if project.pictures.empty? %>
            <img src="http://placehold.it/300x300" class="img-responsive img-centered" alt="">
            <% else %>
            <%= image_tag project.pictures.first.photo.url(:medium), class:"img-responsive img-centered" %><br/>
            <% end %>  
          </a>
        </div>
      <% end %>
    </div>
  <% if admin_signed_in? %> 
    <%= link_to new_project_path, class: "btn btn-info" do %>
      <i class='fa fa-plus'></i> Add project
    <% end %>
  <% end %> 
  </div>
</section>
